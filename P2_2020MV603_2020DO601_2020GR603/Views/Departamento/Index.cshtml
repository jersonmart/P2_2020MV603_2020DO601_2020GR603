@model IEnumerable<P2_2020MV603_2020DO601_2020GR603.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Nombre del departamento</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_Departamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_Departamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_Departamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_Departamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
